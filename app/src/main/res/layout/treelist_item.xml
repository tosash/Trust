<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp">


    <ImageView
        android:id="@+id/id_item_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/down" />

    <TextView
        android:id="@+id/id_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/id_item_icon"
        android:text="name item"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id_item_decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_item_text"
        android:layout_alignStart="@+id/id_item_text"
        android:layout_below="@+id/id_item_icon"
        android:text="desc item"
        android:textSize="9sp" />

</RelativeLayout>
